  </div>  <script>
    // Simple bilingual toggle logic
    const content = {
      'id': {
        lastUpdated: 'Terakhir Diperbarui: [Tanggal Pembaruan]',
      },
      'en': {
        lastUpdated: 'Last Updated: [Update Date]',
      }
    }

    const btnId = document.getElementById('btn-id');
    const btnEn = document.getElementById('btn-en');
    const lastUpdated = document.getElementById('lastUpdated');

    function setLang(lang){
      if(lang==='en'){
        // swap English text (basic)
        document.querySelector('h1').textContent = 'GTKRPS — Privacy Policy';
        document.querySelector('.lead').textContent = 'Professional, concise, ready for App Store & Google Play';
        lastUpdated.textContent = content.en.lastUpdated;
        btnEn.classList.add('primary'); btnId.classList.remove('primary');
      } else {
        document.querySelector('h1').textContent = 'GTKRPS — Privacy Policy';
        document.querySelector('.lead').textContent = 'Profesional, ringkas, dan siap untuk App Store & Google Play';
        lastUpdated.textContent = content.id.lastUpdated;
        btnId.classList.add('primary'); btnEn.classList.remove('primary');
      }
    }
    setLang('id');
    btnId.addEventListener('click', ()=>setLang('id'));
    btnEn.addEventListener('click', ()=>setLang('en'));

    function scrollTo(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth',block:'start'});
    }
  </script></body>
